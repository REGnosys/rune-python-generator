{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 20,
  "packageRules": [
    {
      "description": "Update the Maven property rosetta.dsl.version when com.regnosys.rosetta releases a new version",
      "matchManagers": ["maven"],
      "matchDatasources": ["maven"],
      "matchDepTypes": ["property"],
      "matchPackageNames": ["com.regnosys.rosetta"],
      "matchPackagePrefixes": ["com.regnosys.rosetta"],
      "matchPaths": [
        "pom.xml"
      ],
      "enabled": true,
      "groupName": "Rosetta DSL version"
    },
    {
      "matchPackageNames": [
        "com.regnosys.rosetta.lib",
        "com.regnosys.rosetta.tests"
      ],
      "enabled": true,
      "groupName": "Rosetta DSL version"
    },
    {
      "matchPackagePatterns": [".*"],
      "enabled": false
    }
  ]
}
