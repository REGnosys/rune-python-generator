{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 20,
{
  "packageRules": [
    {
      "description": "Update the Maven property rosetta.dsl.version to match the latest version of the com.regnosys.rosetta:com.regnosys.rosetta artifact",
      "matchManagers": ["maven"],
      "matchDepTypes": ["property"],
      "matchPackageNames": ["rosetta.dsl.version"],     // <-- the property name
      "datasource": "maven",
      "lookupName": "com.regnosys.rosetta:com.regnosys.rosetta",
      "enabled": true
    },
    {
      "description": "Disable all other dependency updates",
      "matchPackagePatterns": [".*"],
      "enabled": false
    }
  ]
}
